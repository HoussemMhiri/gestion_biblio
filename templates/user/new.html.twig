{% extends 'base.html.twig' %}

{% block title %}Create New User{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="page-header py-4 bg-light border-bottom mb-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="h3 mb-0 text-primary">
                        <i class="fas fa-user-plus me-2"></i>
                        Create New User
                    </h1>
                    <p class="text-muted mb-0">Fill out the form below to add a new user to the system.</p>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Users
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    <div class="card shadow-sm">
                        <div class="card-header bg-white border-bottom">
                            <h5 class="mb-0">
                                <i class="fas fa-user me-2 text-secondary"></i>
                                User Information
                            </h5>
                        </div>

                        <div class="card-body">
                            <div class="mb-4">
                                <label for="{{ form.username.vars.id }}" class="form-label fw-bold">
                                    <i class="fas fa-user text-primary me-2"></i> Username <span class="text-danger">*</span>
                                </label>
                                {{ form_widget(form.username, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter a username'}}) }}
                                <div class="form-text text-danger">
                                    {{ form_errors(form.username) }}
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="{{ form.email.vars.id }}" class="form-label fw-bold">
                                    <i class="fas fa-envelope text-primary me-2"></i> Email <span class="text-danger">*</span>
                                </label>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter email address'}}) }}
                                <div class="form-text text-danger">
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-books text-primary me-2"></i> Books <span class="text-muted">(Optional)</span>
                                </label>
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row g-3">
                                            {% for book in form.books %}
                                                <div class="form-check">
                                                    {{ form_widget(book, {'attr': {'class': 'form-check-input'}}) }}
                                                    <label class="form-check-label" for="{{ book.vars.id }}">
                                                        {{ book.vars.label }}
                                                    </label>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-text text-danger">
                                    {{ form_errors(form.books) }}
                                </div>
                            </div>

                            <div class="card-footer bg-white border-top pt-3 d-flex justify-content-between">
                                <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="fas fa-user-plus me-1"></i> Create User
                                </button>
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
