{% extends 'base.html.twig' %}

{% block title %}Détails de l'Éditeur{% endblock %}

{% block body %}
    <h1>Détails de l'Éditeur</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ editeur.id }}</td>
            </tr>
            <tr>
                <th>Nom de l'éditeur</th>
                <td>{{ editeur.nomEditeur }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ editeur.pays }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ editeur.adresse }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ editeur.telephone }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3 mb-3">
        <a href="{{ path('app_editeur_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}" class="btn btn-primary">Modifier</a>
    </div>
        {{ include('editeur/_delete_form.html.twig') }}
{% endblock %}