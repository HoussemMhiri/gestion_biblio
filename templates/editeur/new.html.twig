{% extends 'base.html.twig' %}

{% block title %}Add New Publisher{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            padding: 1.5rem 0;
            margin-bottom: 2rem;
        }
        
        .breadcrumb-item + .breadcrumb-item::before {
            content: "â€º";
            font-weight: bold;
        }
        
        .form-container {
            background-color: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        
        .form-header {
            background-color: #f8f9fc;
            color: #4e73df;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e3e6f0;
            display: flex;
            align-items: center;
        }
        
        .form-header h5 {
            margin-bottom: 0;
            font-weight: 600;
        }
        
        .form-header-icon {
            background-color: #4e73df;
            color: white;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-size: 1.2rem;
        }
        
        .form-body {
            padding: 1.5rem;
        }
        
        .form-footer {
            background-color: #f8f9fc;
            border-top: 1px solid #e3e6f0;
            padding: 1rem 1.5rem;
            display: flex;
            justify-content: flex-end;
            gap: 0.5rem;
        }
        
        .action-bar {
            background-color: #fff;
            border-top: 1px solid #e3e6f0;
            padding: 1rem 0;
            position: sticky;
            bottom: 0;
            z-index: 100;
            box-shadow: 0 -0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        }
        
        .back-to-top {
            position: fixed;
            bottom: 5rem;
            right: 2rem;
            display: none;
            width: 3rem;
            height: 3rem;
            border-radius: 50%;
            background-color: rgba(78, 115, 223, 0.5);
            color: white;
            text-align: center;
            line-height: 3rem;
            transition: all 0.3s;
            z-index: 1000;
        }
        
        .back-to-top:hover {
            background-color: rgba(78, 115, 223, 0.8);
            color: white;
        }
        
        .back-to-top.show {
            display: block;
        }
        
        .action-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .tips-card {
            background-color: #fff3cd;
            border-left: 4px solid #ffc107;
            border-radius: 0.25rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .tips-header {
            display: flex;
            align-items: center;
            color: #856404;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .tips-header i {
            margin-right: 0.5rem;
            font-size: 1.25rem;
        }
        
        .tips-body {
            color: #856404;
        }
        
        .tips-list {
            margin-bottom: 0;
            padding-left: 1.5rem;
        }
        
        .tips-list li {
            margin-bottom: 0.25rem;
        }
        
        .tips-list li:last-child {
            margin-bottom: 0;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-7">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_editeur_index') }}" class="text-decoration-none">
                                    <i class="fas fa-building"></i> Publishers
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Add New</li>
                        </ol>
                    </nav>
                    <h1 class="h2 mb-0">
                        <i class="fas fa-plus-circle me-2 text-primary"></i>
                        Add New Publisher
                    </h1>
                    <p class="text-muted mt-2 mb-0">
                        <i class="fas fa-info-circle me-1"></i>
                        Create a new publisher record in the system
                    </p>
                </div>
                <div class="col-md-5 text-md-end mt-3 mt-md-0">
                    <a href="{{ path('app_editeur_index') }}" class="btn btn-outline-secondary action-btn">
                        <i class="fas fa-arrow-left"></i>
                        <span>Back to List</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <!-- Form Container -->
                <div class="form-container">
                    <div class="form-header">
                        <div class="form-header-icon">
                            <i class="fas fa-building"></i>
                        </div>
                        <h5>Publisher Information</h5>
                    </div>
                    <div class="form-body">
                        {{ include('editeur/_form.html.twig', {
                            'button_label': 'Create Publisher',
                            'button_icon': 'plus-circle'
                        }) }}
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <!-- Tips Card -->
                <div class="tips-card">
                    <div class="tips-header">
                        <i class="fas fa-lightbulb"></i>
                        <span>Tips for Adding Publishers</span>
                    </div>
                    <div class="tips-body">
                        <p>Follow these guidelines to ensure accurate publisher information:</p>
                        <ul class="tips-list">
                            <li>Use the official name of the publishing company</li>
                            <li>Include the country where the publisher is headquartered</li>
                           
                            <li>Include the international dialing code in phone numbers</li>
                        </ul>
                    </div>
                </div>
                 
                <!-- Quick Links -->
                <div class="card shadow-sm">
                    <div class="card-header bg-light py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-link me-1"></i>
                            Quick Links
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <a href="{{ path('app_editeur_index') }}" class="list-group-item list-group-item-action">
                                <i class="fas fa-list me-2 text-primary"></i>
                                View All Publishers
                            </a>
                            <a href="{{ path('app_livre_index') }}" class="list-group-item list-group-item-action">
                                <i class="fas fa-book me-2 text-primary"></i>
                                Manage Books
                            </a>
                            <a href="{{ path('app_categorie_index') }}" class="list-group-item list-group-item-action">
                                <i class="fas fa-folder me-2 text-primary"></i>
                                Manage Categories
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Back to top button -->
    <a href="#" class="back-to-top text-decoration-none" id="backToTop">
        <i class="fas fa-chevron-up"></i>
    </a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Back to top button functionality
            const backToTopButton = document.getElementById('backToTop');
            
            window.addEventListener('scroll', function() {
                if (window.pageYOffset > 300) {
                    backToTopButton.classList.add('show');
                } else {
                    backToTopButton.classList.remove('show');
                }
            });
            
            backToTopButton.addEventListener('click', function(e) {
                e.preventDefault();
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
        });
    </script>
{% endblock %}
