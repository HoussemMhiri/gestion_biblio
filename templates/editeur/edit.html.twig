{% extends 'base.html.twig' %}

{% block title %}Edit Publisher: {{ editeur.nomEditeur }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            padding: 1.5rem 0;
            margin-bottom: 2rem;
        }
        
        .breadcrumb-item + .breadcrumb-item::before {
            content: "â€º";
            font-weight: bold;
        }
        
        .edit-container {
            max-width: 1000px;
            margin: 0 auto;
        }
        
        .edit-card {
            background-color: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        
        .edit-header {
            background-color: #f8f9fc;
            color: #4e73df;
            padding: 1.25rem;
            border-bottom: 1px solid #e3e6f0;
            display: flex;
            align-items: center;
        }
        
        .edit-icon {
            background-color: #4e73df;
            color: white;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-size: 1.2rem;
        }
        
        .edit-title {
            margin-bottom: 0;
            font-weight: 600;
        }
        
        .edit-body {
            padding: 1.5rem;
        }
        
        .edit-footer {
            background-color: #f8f9fc;
            border-top: 1px solid #e3e6f0;
            padding: 1rem 1.5rem;
        }
        
        .action-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .danger-zone {
            background-color: #fff8f8;
            border: 1px solid #f5c6cb;
            border-radius: 0.5rem;
            padding: 1.25rem;
            margin-top: 2rem;
        }
        
        .danger-zone-header {
            color: #721c24;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }
        
        .danger-zone-header i {
            margin-right: 0.5rem;
        }
        
        .danger-zone-content {
            color: #721c24;
            margin-bottom: 1rem;
        }
        
        .tips-card {
            background-color: #fff3cd;
            border-left: 4px solid #ffc107;
            border-radius: 0.25rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .tips-header {
            display: flex;
            align-items: center;
            color: #856404;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .tips-header i {
            margin-right: 0.5rem;
            font-size: 1.25rem;
        }
        
        .tips-body {
            color: #856404;
        }
        
        .tips-list {
            margin-bottom: 0;
            padding-left: 1.5rem;
        }
        
        .tips-list li {
            margin-bottom: 0.25rem;
        }
        
        .tips-list li:last-child {
            margin-bottom: 0;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-7">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_editeur_index') }}" class="text-decoration-none">
                                    <i class="fas fa-building"></i> Publishers
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}" class="text-decoration-none">
                                    {{ editeur.nomEditeur }}
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Edit</li>
                        </ol>
                    </nav>
                    <h1 class="h2 mb-0">
                        <i class="fas fa-edit me-2 text-primary"></i>
                        Edit Publisher
                    </h1>
                    <p class="text-muted mt-2 mb-0">
                        <i class="fas fa-info-circle me-1"></i>
                        Update information for {{ editeur.nomEditeur }}
                    </p>
                </div>
                <div class="col-md-5 text-md-end mt-3 mt-md-0">
                    <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}" class="btn btn-outline-primary action-btn me-2">
                        <i class="fas fa-eye"></i>
                        <span>View Details</span>
                    </a>
                    <a href="{{ path('app_editeur_index') }}" class="btn btn-outline-secondary action-btn">
                        <i class="fas fa-arrow-left"></i>
                        <span>Back to List</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container edit-container">
        <div class="row">
            <div class="col-lg-8">
                <!-- Edit Form Card -->
                <div class="edit-card">
                    <div class="edit-header">
                        <div class="edit-icon">
                            <i class="fas fa-edit"></i>
                        </div>
                        <h5 class="edit-title">Edit Publisher Information</h5>
                    </div>
                    <div class="edit-body">
                        {{ include('editeur/_form.html.twig', {
                            'button_label': 'Update Publisher',
                            'button_icon': 'save',
                            'show_cancel': false
                        }) }}
                    </div>
                </div>
                
                <!-- Danger Zone -->
                <div class="danger-zone">
                    <div class="danger-zone-header">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>Danger Zone</span>
                    </div>
                    <div class="danger-zone-content">
                        <p>Deleting this publisher will permanently remove it from the system. This action cannot be undone.</p>
                        <p class="mb-0"><strong>Warning:</strong> This may affect books associated with this publisher.</p>
                    </div>
                    {{ include('editeur/_delete_form.html.twig') }}
                </div>
            </div>
            
            <div class="col-lg-4">
                <!-- Tips Card -->
                <div class="tips-card">
                    <div class="tips-header">
                        <i class="fas fa-lightbulb"></i>
                        <span>Tips for Editing</span>
                    </div>
                    <div class="tips-body">
                        <p>Follow these guidelines when updating publisher information:</p>
                        <ul class="tips-list">
                            <li>Use the official name of the publishing company</li>
                            <li>Include the country where the publisher is headquartered</li>
                            <li>Include the international dialing code in phone numbers</li>
                        </ul>
                    </div>
                </div>
                
                <!-- Publisher Info Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-info-circle me-1"></i>
                            Current Information
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted d-block">Publisher ID</small>
                            <div class="font-monospace">{{ editeur.id }}</div>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted d-block">Name</small>
                            <div class="fw-bold">{{ editeur.nomEditeur }}</div>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted d-block">Country</small>
                            <div>{{ editeur.pays }}</div>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted d-block">Address</small>
                            <div>{{ editeur.adresse ?: 'Not provided' }}</div>
                        </div>
                        <div>
                            <small class="text-muted d-block">Phone</small>
                            <div>{{ editeur.telephone ?: 'Not provided' }}</div>
                        </div>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div class="card shadow-sm">
                    <div class="card-header bg-light py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-link me-1"></i>
                            Quick Links
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}" class="list-group-item list-group-item-action">
                                <i class="fas fa-eye me-2 text-primary"></i>
                                View Publisher Details
                            </a>
                            <a href="{{ path('app_editeur_index') }}" class="list-group-item list-group-item-action">
                                <i class="fas fa-list me-2 text-primary"></i>
                                View All Publishers
                            </a>
                            <a href="{{ path('app_livre_index') }}" class="list-group-item list-group-item-action">
                                <i class="fas fa-book me-2 text-primary"></i>
                                Manage Books
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
