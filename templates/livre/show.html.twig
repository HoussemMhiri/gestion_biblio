{% extends 'base.html.twig' %}

{% block title %}Détails du Livre{% endblock %}

{% block body %}
    <h1>Détails du Livre</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre de Pages</th>
                <td>{{ livre.nbPages }}</td>
            </tr>
            <tr>
                <th>Date d'édition</th>
                <td>{{ livre.dateEdition ? livre.dateEdition|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre d'exemplaires</th>
                <td>{{ livre.nbExemplaires }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }}</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>{{ livre.isbn }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3 mb-3">
        <a href="{{ path('app_livre_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-primary">Modifier</a>
    </div>
        {{ include('livre/_delete_form.html.twig') }}
{% endblock %}