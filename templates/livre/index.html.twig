{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block body %}
    <h1>Liste des Livres</h1>

    <a href="{{ path('app_livre_new') }}" class="btn btn-primary mb-3">Créer un nouveau livre</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Nombre de Pages</th>
                <th>Date d'édition</th>
                <th>Nombre d'exemplaires</th>
                <th>Prix</th>
                <th>ISBN</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for livre in livres %}
                <tr>
                    <td>{{ livre.id }}</td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.nbPages }}</td>
                    <td>{{ livre.dateEdition ? livre.dateEdition|date('Y-m-d') : '' }}</td>
                    <td>{{ livre.nbExemplaires }}</td>
                    <td>{{ livre.prix }}</td>
                    <td>{{ livre.isbn }}</td>
                    <td>
                        <a href="{{ path('app_livre_show', {'id': livre.id}) }}" class="btn btn-sm btn-info m-1">Voir</a>
                        <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-sm btn-warning m-1">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}