{% extends 'base.html.twig' %}

{% block title %}Edit Book: {{ livre.titre }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .edit-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            padding: 1.5rem 0;
            margin-bottom: 2rem;
        }
        
        .form-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .breadcrumb-item + .breadcrumb-item::before {
            content: "â€º";
            font-weight: bold;
        }
        
        .action-bar {
            background-color: #fff;
            border-top: 1px solid #e3e6f0;
            padding: 1rem 0;
            position: sticky;
            bottom: 0;
            z-index: 100;
            box-shadow: 0 -0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        }
        
        .danger-zone {
            background-color: #fff8f8;
            border: 1px solid #f5c6cb;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-top: 2rem;
            margin-bottom: 5rem;
        }
        
        .danger-zone-header {
            color: #721c24;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }
        
        .danger-zone-header i {
            margin-right: 0.5rem;
        }
        
        .danger-zone-content {
            color: #721c24;
            margin-bottom: 1rem;
        }
        
        .back-to-top {
            position: fixed;
            bottom: 5rem;
            right: 2rem;
            display: none;
            width: 3rem;
            height: 3rem;
            border-radius: 50%;
            background-color: rgba(78, 115, 223, 0.5);
            color: white;
            text-align: center;
            line-height: 3rem;
            transition: all 0.3s;
            z-index: 1000;
        }
        
        .back-to-top:hover {
            background-color: rgba(78, 115, 223, 0.8);
            color: white;
        }
        
        .back-to-top.show {
            display: block;
        }
        
        .book-badge {
            background-color: #4e73df;
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            font-weight: 600;
            margin-left: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Edit Header -->
    <div class="edit-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-7">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_livre_index') }}" class="text-decoration-none">
                                    <i class="fas fa-book"></i> Books
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_livre_show', {'id': livre.id}) }}" class="text-decoration-none">
                                    {{ livre.titre }}
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Edit</li>
                        </ol>
                    </nav>
                    <h1 class="h2 mb-0 d-flex align-items-center">
                        <i class="fas fa-edit me-2 text-primary"></i>
                        Edit Book
                        <span class="book-badge">ID: {{ livre.id }}</span>
                    </h1>
                    <p class="text-muted mt-2 mb-0">
                        <i class="fas fa-info-circle me-1"></i>
                        Update the information for "{{ livre.titre }}"
                    </p>
                </div>
                <div class="col-md-5 text-md-end mt-3 mt-md-0">
                    <a href="{{ path('app_livre_show', {'id': livre.id}) }}" class="btn btn-outline-primary me-2">
                        <i class="fas fa-eye me-1"></i> View Details
                    </a>
                    <a href="{{ path('app_livre_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Container -->
    <div class="container">
        <div class="form-container">
           

            {{ include('livre/_form.html.twig', {'button_label': 'Update'}) }}
            
            <!-- Danger Zone -->
            <div class="danger-zone">
                <div class="danger-zone-header">
                    <i class="fas fa-exclamation-triangle"></i>
                    Danger Zone
                </div>
                <div class="danger-zone-content">
                    <p>Permanently delete this book. This action cannot be undone.</p>
                    <p><strong>Warning:</strong> Deleting this book will remove all associated data from the system.</p>
                </div>
                {{ include('livre/_delete_form.html.twig', {'button_label': 'Delete this book', 'button_class': 'btn-outline-danger'}) }}
            </div>
        </div>
    </div>
    
    <!-- Action Bar -->
   
    
    <!-- Back to top button -->
    <a href="#" class="back-to-top text-decoration-none" id="backToTop">
        <i class="fas fa-chevron-up"></i>
    </a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add ID to the form for the sticky action bar
            const bookForm = document.querySelector('.book-form');
            if (bookForm) {
                bookForm.id = 'edit-book-form';
            }
            
            // Back to top button functionality
            const backToTopButton = document.getElementById('backToTop');
            
            window.addEventListener('scroll', function() {
                if (window.pageYOffset > 300) {
                    backToTopButton.classList.add('show');
                } else {
                    backToTopButton.classList.remove('show');
                }
            });
            
            backToTopButton.addEventListener('click', function(e) {
                e.preventDefault();
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
            
            // Form validation enhancement
            if (bookForm) {
                bookForm.addEventListener('submit', function(event) {
                    if (!bookForm.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                        
                        // Find the first invalid field and focus it
                        const invalidField = bookForm.querySelector(':invalid');
                        if (invalidField) {
                            invalidField.focus();
                            
                            // Scroll to the invalid field with some offset
                            const yOffset = -100; 
                            const y = invalidField.getBoundingClientRect().top + window.pageYOffset + yOffset;
                            window.scrollTo({top: y, behavior: 'smooth'});
                        }
                    }
                    
                    bookForm.classList.add('was-validated');
                });
            }
        });
    </script>
{% endblock %}
