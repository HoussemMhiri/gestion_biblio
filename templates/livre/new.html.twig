{% extends 'base.html.twig' %}

{% block title %}Add New Book{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            padding: 1.5rem 0;
            margin-bottom: 2rem;
        }
        
        .breadcrumb-item + .breadcrumb-item::before {
            content: "â€º";
            font-weight: bold;
        }
        
        .form-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .back-to-top {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            display: none;
            width: 3rem;
            height: 3rem;
            border-radius: 50%;
            background-color: rgba(78, 115, 223, 0.5);
            color: white;
            text-align: center;
            line-height: 3rem;
            transition: all 0.3s;
            z-index: 1000;
        }
        
        .back-to-top:hover {
            background-color: rgba(78, 115, 223, 0.8);
            color: white;
        }
        
        .back-to-top.show {
            display: block;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="h2 mb-0">
                        <i class="fas fa-book-medical me-2 text-primary"></i>
                        Add New Book
                    </h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 mt-2">
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_livre_index') }}" class="text-decoration-none">
                                    <i class="fas fa-home"></i> Books
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Add New</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="{{ path('app_livre_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Container -->
    <div class="container mb-5">
       
            {{ include('livre/_form.html.twig', {'button_label': 'Create Book'}) }}
        </div>
    </div>

    <!-- Back to top button -->
    <a href="#" class="back-to-top text-decoration-none" id="backToTop">
        <i class="fas fa-chevron-up"></i>
    </a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Back to top button functionality
            const backToTopButton = document.getElementById('backToTop');
            
            window.addEventListener('scroll', function() {
                if (window.pageYOffset > 300) {
                    backToTopButton.classList.add('show');
                } else {
                    backToTopButton.classList.remove('show');
                }
            });
            
            backToTopButton.addEventListener('click', function(e) {
                e.preventDefault();
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
            
            // Form validation enhancement
            const form = document.querySelector('.book-form');
            if (form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                        
                        // Find the first invalid field and focus it
                        const invalidField = form.querySelector(':invalid');
                        if (invalidField) {
                            invalidField.focus();
                            
                            // Scroll to the invalid field with some offset
                            const yOffset = -100; 
                            const y = invalidField.getBoundingClientRect().top + window.pageYOffset + yOffset;
                            window.scrollTo({top: y, behavior: 'smooth'});
                        }
                    }
                    
                    form.classList.add('was-validated');
                });
            }
        });
    </script>
{% endblock %}
