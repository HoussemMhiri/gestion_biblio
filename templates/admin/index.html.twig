{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}
    <div class="container">
        <h1>Tableau de bord</h1>

        <div class="row">
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-header">Nombre d'auteurs</div>
                    <div class="card-body">
                        <h4 class="card-title">{{ nbAuteurs }}</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">Nombre de catégories</div>
                    <div class="card-body">
                        <h4 class="card-title">{{ nbCategories }}</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header">Nombre d'éditeurs</div>
                    <div class="card-body">
                        <h4 class="card-title">{{ nbEditeurs }}</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header">Nombre de livres</div>
                    <div class="card-body">
                        <h4 class="card-title">{{ nbLivres }}</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}