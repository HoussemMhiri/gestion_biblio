{% extends 'base.html.twig' %}

{% block title %}Détails de l'Auteur{% endblock %}

{% block body %}
    <h1>Détails de l'Auteur</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ auteur.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.nom }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ auteur.biographie }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3 mb-3">
        <a href="{{ path('app_auteur_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}" class="btn btn-primary">Modifier</a>
    </div>
        {{ include('auteur/_delete_form.html.twig') }}
{% endblock %}