{% extends 'base.html.twig' %}

{% block title %}Edit Author{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .author-edit-container {
            background-color: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 2rem;
        }
        
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 1rem;
            margin-bottom: 1.5rem;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .breadcrumb-item + .breadcrumb-item::before {
            content: "â€º";
        }
        
        .action-buttons {
            display: flex;
            justify-content: space-between;
            padding: 1.5rem;
            background-color: #f8f9fc;
            border-top: 1px solid #e3e6f0;
            border-bottom-left-radius: 0.5rem;
            border-bottom-right-radius: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_livre_index') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_auteur_index') }}">Authors</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </nav>

    <div class="author-edit-container">
        <!-- Page Header -->
        <div class="page-header p-4">
            <div>
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-user-edit me-2 text-primary"></i>
                    Edit Author
                </h1>
                <p class="text-muted mb-0">Update author information</p>
            </div>
            <div>
                <a href="{{ path('app_auteur_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Back to list
                </a>
            </div>
        </div>
        
        <!-- Form Container -->
        <div class="p-4">
            {{ include('auteur/_form.html.twig', {'button_label': 'Update'}) }}
        </div>
        
        <!-- Action Buttons -->
        <div class="action-buttons">
            <div>
                {{ include('auteur/_delete_form.html.twig') }}
            </div>
            <div>
                <a href="{{ path('app_auteur_show', {'id': auteur.id}) }}" class="btn btn-info">
                    <i class="fas fa-eye me-1"></i> View Details
                </a>
            </div>
        </div>
    </div>
    
    <!-- Additional Information Card -->
  
{% endblock %}
