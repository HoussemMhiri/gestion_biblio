<div class="ea-panel shadow-sm">
    <div class="ea-panel-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="ea-panel-title mb-0">
                <i class="fas fa-user-edit me-2 text-primary"></i>
                {{ form_title|default('Author Information') }}
            </h3>
            <div>
                <a href="{{ path('app_auteur_index') }}" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to list
                </a>
            </div>
        </div>
    </div>
    
    <div class="ea-panel-content p-4">
        {{ form_start(form, {'attr': {'class': 'ea-form needs-validation'}}) }}
            
            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.prenom, 'First Name', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-user text-primary"></i>
                            </span>
                            {{ form_widget(form.prenom, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'Enter first name'
                                }
                            }) }}
                        </div>
                        <div class="form-text text-danger">
                            {{ form_errors(form.prenom) }}
                        </div>
                        <div class="form-text text-muted">
                            <small>Author's first name will be displayed on book listings</small>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.nom, 'Last Name', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-user-tag text-primary"></i>
                            </span>
                            {{ form_widget(form.nom, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'Enter last name'
                                }
                            }) }}
                        </div>
                        <div class="form-text text-danger">
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="form-text text-muted">
                            <small>Author's last name will be displayed on book listings</small>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-group mb-4">
                {{ form_label(form.biographie, 'Biography', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="fas fa-book-open text-primary"></i>
                    </span>
                    {{ form_widget(form.biographie, {
                        'attr': {
                            'class': 'form-control',
                            'rows': 6,
                            'placeholder': 'Enter author biography',
                            'style': 'border-top-left-radius: 0; border-bottom-left-radius: 0;'
                        }
                    }) }}
                </div>
                <div class="form-text text-danger">
                    {{ form_errors(form.biographie) }}
                </div>
                <div class="form-text text-muted">
                    <small>Provide a detailed biography of the author (markdown formatting supported)</small>
                </div>
            </div>
            
            <div class="form-group d-flex justify-content-between border-top pt-4 mt-4">
                <a href="{{ path('app_auteur_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i> Cancel
                </a>
                <button type="submit" class="btn btn-primary px-4">
                    <i class="fas fa-save me-1"></i> {{ button_label|default('Save') }}
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<style>
    .ea-panel {
        border-radius: 8px;
        overflow: hidden;
        background-color: white;
        margin-bottom: 2rem;
        border: 1px solid rgba(0,0,0,.125);
    }
    
    .ea-panel-header {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid rgba(0,0,0,.125);
    }
    
    .ea-panel-title {
        font-size: 1.25rem;
        color: #4e73df;
    }
    
    .input-group-text {
        border: 1px solid #d1d3e2;
    }
    
    .form-control {
        border: 1px solid #d1d3e2;
    }
    
    .form-control:focus {
        border-color: #bac8f3;
        box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.25);
    }
    
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
    }
    
    .btn-primary:hover {
        background-color: #2e59d9;
        border-color: #2653d4;
    }
    
    .text-primary {
        color: #4e73df !important;
    }
</style>
