{{ form_start(form, {
    'attr': {
        'class': 'category-form needs-validation my-4',
        'novalidate': 'novalidate'
    }
}) }}

<div class="row g-4">
    <div class="col-md-6">
        <div class="form-group mb-3">
            {{ form_label(form.designation, 'Category Name', {
                'label_attr': {
                    'class': 'form-label fw-bold'
                }
            }) }}
            <div class="input-group">
                <span class="input-group-text bg-light">
                    <i class="fas fa-tag text-primary"></i>
                </span>
                {{ form_widget(form.designation, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Enter category name',
                        'autofocus': 'autofocus'
                    }
                }) }}
            </div>
            {% if form.designation.vars.errors|length > 0 %}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.designation) }}
                </div>
            {% else %}
                <small class="form-text text-muted">
                    The name should be concise and descriptive.
                </small>
            {% endif %}
        </div>
    </div>
    
    <div class="col-md-12">
        <div class="form-group mb-3">
            {{ form_label(form.description, 'Description', {
                'label_attr': {
                    'class': 'form-label fw-bold'
                }
            }) }}
            <div class="input-group">
                <span class="input-group-text bg-light">
                    <i class="fas fa-align-left text-primary"></i>
                </span>
                {{ form_widget(form.description, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Enter category description',
                        'rows': 4,
                        'style': 'resize: vertical;'
                    }
                }) }}
            </div>
            {% if form.description.vars.errors|length > 0 %}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.description) }}
                </div>
            {% else %}
                <small class="form-text text-muted">
                    Provide a detailed description of what this category includes.
                </small>
            {% endif %}
        </div>
    </div>
    
    {% if form.vars.errors|length > 0 %}
        <div class="col-12">
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle me-2"></i>
                Please correct the errors below.
                {{ form_errors(form) }}
            </div>
        </div>
    {% endif %}
    
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-primary px-4">
                <i class="fas fa-{{ button_icon|default('save') }} me-2"></i>
                {{ button_label|default('Save') }}
            </button>
            
            {% if show_cancel|default(true) %}
                <a href="{{ path('app_categorie_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-2"></i>
                    Cancel
                </a>
            {% endif %}
        </div>
    </div>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}

<style>
    .category-form .form-group {
        position: relative;
    }
    
    .category-form .form-label {
        color: #4e73df;
    }
    
    .category-form .input-group-text {
        border-right: none;
    }
    
    .category-form .form-control {
        border-left: none;
    }
    
    .category-form .form-control:focus {
        box-shadow: none;
        border-color: #bac8f3;
    }
    
    .category-form .input-group-text:focus-within {
        border-color: #bac8f3;
    }
    
    .category-form .form-control:focus + .input-group-text {
        border-color: #bac8f3;
    }
    
    .category-form .invalid-feedback {
        font-size: 0.85rem;
        color: #e74a3b;
    }
    
    .category-form .form-text {
        font-size: 0.85rem;
    }
    
    .category-form .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
    }
    
    .category-form .btn-primary:hover {
        background-color: #2e59d9;
        border-color: #2653d4;
    }
</style>
