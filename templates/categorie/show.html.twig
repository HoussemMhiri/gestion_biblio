{% extends 'base.html.twig' %}

{% block title %}Category Details: {{ categorie.designation }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            padding: 1.5rem 0;
            margin-bottom: 2rem;
        }
        
        .breadcrumb-item + .breadcrumb-item::before {
            content: "â€º";
            font-weight: bold;
        }
        
        .category-container {
            max-width: 1000px;
            margin: 0 auto;
        }
        
        .detail-card {
            background-color: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        
        .detail-header {
            background-color: #f8f9fc;
            color: #4e73df;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e3e6f0;
            display: flex;
            align-items: center;
        }
        
        .detail-header h5 {
            margin-bottom: 0;
            font-weight: 600;
        }
        
        .detail-header-icon {
            background-color: #4e73df;
            color: white;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-size: 1.2rem;
        }
        
        .detail-body {
            padding: 0;
        }
        
        .detail-row {
            display: flex;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .detail-row:last-child {
            border-bottom: none;
        }
        
        .detail-label {
            flex: 0 0 30%;
            font-weight: 600;
            background-color: #f8f9fc;
            padding: 1rem 1.5rem;
            display: flex;
            align-items: center;
            border-right: 1px solid #e3e6f0;
        }
        
        .detail-value {
            flex: 0 0 70%;
            padding: 1rem 1.5rem;
        }
        
        .detail-footer {
            background-color: #f8f9fc;
            border-top: 1px solid #e3e6f0;
            padding: 1rem 1.5rem;
            display: flex;
            justify-content: flex-end;
            gap: 0.5rem;
        }
        
        .books-card {
            background-color: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        
        .books-header {
            background-color: #f8f9fc;
            color: #4e73df;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e3e6f0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .books-header h5 {
            margin-bottom: 0;
            font-weight: 600;
            display: flex;
            align-items: center;
        }
        
        .books-badge {
            background-color: #4e73df;
            color: white;
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            margin-left: 0.5rem;
        }
        
        .books-body {
            padding: 1.5rem;
        }
        
        .book-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .book-item {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #e3e6f0;
            display: flex;
            align-items: center;
        }
        
        .book-item:last-child {
            border-bottom: none;
        }
        
        .book-icon {
            color: #4e73df;
            margin-right: 0.75rem;
        }
        
        .book-title {
            font-weight: 600;
            margin-right: auto;
        }
        
        .book-link {
            color: #4e73df;
            text-decoration: none;
        }
        
        .book-link:hover {
            text-decoration: underline;
        }
        
        .empty-books {
            text-align: center;
            padding: 2rem;
            color: #858796;
        }
        
        .empty-books-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: #dddfeb;
        }
        
        .danger-zone {
            background-color: #fff8f8;
            border: 1px solid #f5c6cb;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-top: 1rem;
            margin-bottom: 3rem;
        }
        
        .danger-zone-header {
            color: #721c24;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }
        
        .danger-zone-header i {
            margin-right: 0.5rem;
        }
        
        .danger-zone-content {
            color: #721c24;
            margin-bottom: 1rem;
        }
        
        .action-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-7">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_categorie_index') }}" class="text-decoration-none">
                                    <i class="fas fa-folder"></i> Categories
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">{{ categorie.designation }}</li>
                        </ol>
                    </nav>
                    <h1 class="h2 mb-0">
                        <i class="fas fa-folder-open me-2 text-primary"></i>
                        {{ categorie.designation }}
                    </h1>
                </div>
                <div class="col-md-5 text-md-end mt-3 mt-md-0">
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-primary action-btn">
                        <i class="fas fa-edit"></i>
                        <span>Edit Category</span>
                    </a>
                    <a href="{{ path('app_categorie_index') }}" class="btn btn-outline-secondary action-btn ms-2">
                        <i class="fas fa-arrow-left"></i>
                        <span>Back to List</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <div class="category-container">
            <!-- Category Details Card -->
            <div class="detail-card">
                <div class="detail-header">
                    <div class="detail-header-icon">
                        <i class="fas fa-info"></i>
                    </div>
                    <h5>Category Information</h5>
                </div>
                <div class="detail-body">
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-fingerprint text-primary me-2"></i> ID
                        </div>
                        <div class="detail-value">
                            <span class="badge bg-secondary">{{ categorie.id }}</span>
                        </div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-tag text-primary me-2"></i> Name
                        </div>
                        <div class="detail-value">
                            <strong>{{ categorie.designation }}</strong>
                        </div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-align-left text-primary me-2"></i> Description
                        </div>
                        <div class="detail-value">
                            {% if categorie.description %}
                                {{ categorie.description|nl2br }}
                            {% else %}
                                <span class="text-muted fst-italic">No description provided</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
            
            <!-- Danger Zone -->
            <div class="danger-zone">
                <div class="danger-zone-header">
                    <i class="fas fa-exclamation-triangle"></i>
                    Danger Zone
                </div>
                <div class="danger-zone-content">
                    <p>Permanently delete this category. This action cannot be undone.</p>
                    {% if categorie.livres is defined and categorie.livres|length > 0 %}
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Warning:</strong> This category contains {{ categorie.livres|length }} books. Deleting it may affect these books.
                        </div>
                    {% endif %}
                </div>
                {{ include('categorie/_delete_form.html.twig', {
                    'button_label': 'Delete this category',
                    'button_class': 'btn-outline-danger'
                }) }}
            </div>
        </div>
    </div>
{% endblock %}
